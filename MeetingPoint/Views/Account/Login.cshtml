@{
    Layout = null;
    @model LoginModel;
    ViewData["Title"] = "Авторизация";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>@ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="~/css/auth.css" />
    <script src="~/js/jquery-3.3.1.js"></script>
    <script src="~/js/auth.js"></script>
</head>
<body>
    <main class="auth">
        <div class="auth_wrap">
            <div class="inner">
                <div class="auth_logo">
                    <a href="~/Home/Index">MeetingPoint</a>
                </div>
                <form method="post" asp-controller="Account" asp-action="Login" class="form_auth">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div>
                        <input type="text" asp-for="Login" placeholder="Логин" />
                        <div class="auth_validation_wrap">
                            <span asp-validation-for="Login"></span>
                        </div>
                    </div>
                    <div>
                        <input type="password" asp-for="Password" placeholder="Пароль" />
                        <div class="auth_validation_wrap">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>
                    <div class="rememberme">
                        <div class="auth_checkbox">
                            <input type="checkbox" asp-for="RememberMe" />
                            <span class="check_r"></span>
                            <span class="check_l"></span>
                        </div>
                        <label style="user-select: none;">Запомнить меня</label>
                    </div>
                    <div>
                        <input type="submit" value="Войти" class="button" />
                    </div>
                </form>
                <div class="signup_link">
                    <a href="~/Account/Registration">Регистрация</a>
                </div>
            </div>
        </div>
    </main>
</body>
</html>