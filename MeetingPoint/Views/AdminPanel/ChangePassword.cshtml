@model ChangePasswordModel
@{
    ViewData["Title"] = "Изменение пароля пользователя";
}

<h2>Изменение пароля для пользователя @Model.UserName</h2>
<form asp-action="ChangePassword" asp-controller="AdminPanel">
    <div asp-validation-summary="All"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserName" />

    <div>
        <label asp-for="NewPassword">Новый пароль</label>
        <input type="text" asp-for="NewPassword"/>
    </div>
    <div>
        <input type="submit" value="Сохранить" />
    </div>
</form>
