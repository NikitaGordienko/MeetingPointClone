@model CreateUserModel
@{
    ViewData["Title"] = "Создание пользователя";
}

<form asp-action="Create" asp-controller="AdminPanel">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Login">Login</label>
        <input type="text" asp-for="Login" />
    </div>
    <div>
        <label asp-for="Password">Пароль</label>
        <input type="text" asp-for="Password" />
    </div>
    <div>
        <label asp-for="ConfirmPassword">Подтверждение пароля</label>
        <input type="text" asp-for="ConfirmPassword" />
    </div>
    <div>
        <input type="submit" value="Добавить" />
    </div>
</form>