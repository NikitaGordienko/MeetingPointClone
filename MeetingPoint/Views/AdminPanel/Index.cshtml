@model IEnumerable<User>
@{
    ViewData["Title"] = "Пользователи";
}
<a asp-action="Create">Добавить пользователя</a>
<a asp-action="Index" asp-controller="Roles">Права доступа</a>

<table>
    <tr><th>Email</th><th>Год</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.UserName</td>
            <td>@user.Nickname</td>
            <td>@user.RegistrationDate</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                    <a asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                    <a asp-action="ChangeRole" asp-controller="Roles" asp-route-id="@user.Id">Изменить права</a>
                    <button type="submit" class="btn btn-sm btn-danger">Удалить</button>
                </form>
            </td>
        </tr>
    }
</table>
