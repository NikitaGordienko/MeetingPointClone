@using Microsoft.AspNetCore.Identity
@model ChangeRoleModel

<h2>Изменение ролей для пользователя @Model.UserName</h2>

<form asp-action="ChangeRole" method="post">
    <input type="hidden" name="userId" value="@Model.Id" />
    <div>
        @foreach (IdentityRole role in Model.Roles)
        {
            <input type="checkbox" name="roles" value="@role.Name"
                   @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
            }
    </div>
    <button type="submit">Сохранить</button>
</form>